@model IEnumerable<EnrollData>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <div class="form-group" style="padding-top:15px">

        <input type="submit" formaction="/Home/EnrollMent" onclick="@("window.location.href='"+ Url.Action("EnrollMent","Home") + "'");" value="Enroll User" class="btn btn-primary" />
         
       
    </div>
    <div class="container-fluid py-4">
        <h4 class="text-center text-uppercase">Enrolled User List</h4>
        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-white">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Course Name</th>
                    <th>Course Desc</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.firstName</td>
                        <td>@item.lastName</td>
                        <td>@item.CourseName</td>
                        <td>@item.CourseDesc</td>
                        <td>@item.StartDate</td>
                        <td>@item.EndDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>  