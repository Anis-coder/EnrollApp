@model Course
@{
    ViewData["Title"] = "Create Course";
}

<h2> Add Course</h2>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Course">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <span class="row-cols-md-3 text-danger">*</span><label asp-for="Name" class="row-cols-md-3"></label>
                <input asp-for="Name" class="row-cols-md-3" style="margin-left:27px"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-top:15px">
                <label asp-for="Description" class="row-cols-md-3"></label>
                <input asp-for="Description" class="row-cols-md-3" />
            </div>
            <div class="form-group" style="padding-top:15px">
                <input type="submit" value="Save User Details" class="btn btn-primary" />
            </div>
            <b>@ViewBag.message</b>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
